<!DOCTYPE html>
<html>
  <head>
    <title>Hot Spots</title>
    <meta name="viewport" content="initial-scale=1.0">
    <meta charset="utf-8">
    <link rel="stylesheet" type="text/css" href="/assets/styles.css" ></link>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.2/jquery.min.js">
    </script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCi9T8cVb_mpG56jJzqzD3nsVOfBDN43Ac&callback=initMap&libraries=visualization" async defer></script>
  </head>
  <body>
    <div id="map"></div>

    <script>
    function initMap () {
      var map;
      console.log("im called");
      $.getJSON("/results", function(data){
        var heatmapData = []
        data.forEach(function (place) {
          heatmapData.push({location: new google.maps.LatLng(parseInt(place.lat), parseInt(place.lng)), weight: place.num_mentions})
        })
        console.log(heatmapData);
        return heatmapData
      }).then(function(stuff) {
        var random = []
        for(var i=0; i < stuff.length; i++) {
          random.push({location: new google.maps.LatLng(parseInt(stuff[i].lat), parseInt(stuff[i].lng)), weight: stuff[i].num_mentions})
        }
        console.log("about to place data on map", random);
        console.log("in promise");
        var test = [
              new google.maps.LatLng(36.49986, 37.18382),
                new google.maps.LatLng(37.782, -122.445),
               new google.maps.LatLng(37.782, -122.443)
        ]
        console.log(test);
        loadMap(random)
      });

      function loadMap(heatMapData) {
        map = new google.maps.Map(document.getElementById('map'), {
          center: {lat: 36.2021, lng: 37.1343},
          zoom: 10,
          mapTypeId: google.maps.MapTypeId.SATELLITE
        });

        heatmap = new google.maps.visualization.HeatmapLayer({
          data: heatMapData,
          map: map
        })
        heatmap.setMap(map);
    }
    }

    </script>
  </body>
</html>
